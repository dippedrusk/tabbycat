{
  "name": "Tabby Cat",
  "version": "1.0",
  "description": "Shows tab characters in the current tab when turned on",
  "permissions": [
    "activeTab", "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Tabby Cat"
  },
  "options_ui": {
    "page": "options.html"
  },
  "icons": {
    "128": "images/tabbycat128.png",
    "48": "images/tabbycat48.png"
  },
  "manifest_version": 2
}
