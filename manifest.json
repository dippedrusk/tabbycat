{
  "name": "Tabby Cat",
  "version": "1.0",
  "description": "Shows tab characters in all windows when turned on",
  "permissions": [
    "http://*/", "https://*/",
    "tabs","declarativeContent","storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Tabby Cat"
  },
  "content_scripts": [
    {
      "matches": ["http://*/", "https://*/"],
      "js": ["showTabs.js"]
    }
  ],
  "manifest_version": 2
}
